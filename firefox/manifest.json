{
    "manifest_version": 2,
    "name": "Board Centralizer",
    "version": "1.0",
  
    "description": "Centralize every chessboard on all chess.com webpages.",
  
    "icons": {
      "48": "/icons/chess_board_icon.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.chess.com/puzzles*", "*://*.chess.com/play*", "*://*.chess.com/game*"],
        "js": ["app.js"]
      }
    ]
  }
  
